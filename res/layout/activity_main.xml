<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

		<!-- <Space android:layout_weight="1" /> -->

        <!-- tableRow1 -->
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView1"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowDownRight" />

			<Space android:layout_weight="1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowDown" />

            <Space android:layout_weight="1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowDownLeft" />
        </TableRow>
        <!-- /tableRow1 -->

		<!-- tableRow2 -->
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Space android:layout_weight="1" />

            <TextView
                android:id="@+id/textView4"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowDownRight" />

            <TextView
                android:id="@+id/textView5"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowDown" />

            <TextView
                android:id="@+id/textView6"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowDownLeft" />

            <Space android:layout_weight="1" />

        </TableRow>
        <!-- /tableRow2 -->

		<!-- tableRow3 -->
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView7"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowRight" />

            <TextView
                android:id="@+id/textView8"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowRight" />

           <EditText
                android:id="@+id/editTextAnswer"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:hint="@string/answerHint"
                android:inputType="text" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView9"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowLeft" />

            <TextView
                android:id="@+id/textView10"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowLeft" />

        </TableRow>
        <!-- /tableRow3 -->

		<!-- tableRow4 -->
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Space android:layout_weight="1" />

            <TextView
                android:id="@+id/textView11"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowUpRight" />

            <TextView
                android:id="@+id/textView12"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowUp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowUpLeft" />

            <Space android:layout_weight="1" />

        </TableRow>
        <!-- /tableRow4 -->

        <!-- tableRow5 -->
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView14"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowUpRight" />

			<Space android:layout_weight="1" />

            <TextView
                android:id="@+id/textView15"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowUp" />

            <Space android:layout_weight="1" />

            <TextView
                android:id="@+id/textView16"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@layout/border"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/arrowUpLeft" />
        </TableRow>
        <!-- /tableRow1 -->

    </TableLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom" >

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="buttonSubmitClick"
            android:text="@string/buttonSubmit" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="buttonGiveUpClick"
            android:text="@string/buttonGiveUp" />

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="buttonNextClick"
            android:text="@string/buttonNext" />
    </LinearLayout>

</LinearLayout>